model SavedReport {
  id            String    @id @default(cuid())
  name          String
  type          String // PROFIT_LOSS, BALANCE_SHEET, CASH_FLOW, TAX_SUMMARY, EXPENSE_REPORT, INCOME_REPORT, AR_AGING, AP_AGING, etc.
