  @@index([organizationId, status])
  @@index([organizationId, orderDate])
  @@index([organizationId, customerId])
}

// =============================================================================
// ARCHIVE
// =============================================================================

model ArchiveRecord {
  id String @id @default(cuid())

  // ==========================================================================
  // IDENTITY (TS Section 4.1)
  // ==========================================================================
  archiveRecordId  String  @unique // Globally unique, deterministic
  originalObjectId String
  objectType       String // invoice, order, offer, payment, journal_entry, report, etc.
  objectVersion    Int     @default(1)
  parentRecordId   String? // Predecessor archive record (version chain)
  legalEntityId    String?
  partyId          String? // Party-based accounting link

  // ==========================================================================
  // TEMPORAL METADATA (TS Section 4.2)
  // ==========================================================================
  createdAt        DateTime // Original object creation
  archivedAt       DateTime  @default(now())
  effectiveDate    DateTime? // Business effective date
  accountingPeriod String? // e.g., "2025-01", "2025-Q1"
  fiscalYear       Int?
  fiscalPeriod     String? // Q1, Q2, Q3, Q4, M01-M12
  timezone         String    @default("UTC")

  // ==========================================================================
  // INTEGRITY (TS Section 4.3) - Cryptographic Chain
  // ==========================================================================
  contentHash       String // SHA-256 of archived content
  predecessorHash   String? // Chain link to previous version
  signature         String? // System or user signature
  tamperChecksum    String? // Additional integrity check
