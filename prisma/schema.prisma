// =============================================================================
// CORPORATE ENTITIES
// =============================================================================

model CorporateEntity {
  id                String    @id @default(cuid())
  name              String
  type              String // corporation, llc, partnership, sole_proprietorship
  jurisdiction      String
  taxId             String?
  incorporationDate DateTime?
  ownershipPercent  Decimal?  @db.Decimal(5, 2)
